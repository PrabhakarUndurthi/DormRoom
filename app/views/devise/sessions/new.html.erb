<h2>Sign in</h2>

<div class="row">
   <div class="span4">
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "well"}) do |f| %>

	<%= f.input :email , placeholder: "Enter your user name", autofocus: true %>
	<%= f.input :password, placeholder: "Enter your password", autocomplete: "off" %>

	 
	  <% if devise_mapping.rememberable? -%>
	   <div><%= f.input :remember_me, as: :boolean %> </div>
	  <% end -%>


	  <%= f.button :submit, "Sign In",  class: "btn btn-success" %>
	<% end %>

	 <%= render "devise/shared/links" %>
  </div>
  <br />


  <div class="span8">
	<h2> Signing is now easy and secure</h2>
	<p> Take a trip around DormRoom and enjoy!!!</p>
	
    </div>
	
   </div>
