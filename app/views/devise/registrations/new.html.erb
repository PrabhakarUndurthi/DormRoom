<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <%= f.input :first_name , placeholder: 'Enter your first name' , required: true %>
  <%= f.input :last_name, placeholder: ' Enter your last name' , required: true %>
  <%= f.input :profile_name, placeholder:'Enter your profile name', required: true  %>
  <%= f.input :email, placeholder: 'Enter your email', autofocus: true, required: true %>
  <%= f.input :password , placeholder: 'Enter your new password', required:true  %>
  <%= f.input :password_confirmation, placeholder: 'Re-enter Your Password' , autocomplete: "off",required:true  %>
  <%= f.input :age, collection: 13..60 , prompt: 'Select your age' %>
  <%=f.input :gender, collection: [:Male, :Female],prompt: 'Select your gender' %><br />


  <%= f.submit 'Create my account ', class: "btn btn-large btn-block btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
